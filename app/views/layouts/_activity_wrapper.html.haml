.activity
  .body
    .mega-icon{:style => "background-image: url(#{image_path "icons/#{a.key.split(".").last}.svg"})"}
    = timeago a.created_at
    .title
      - if a.owner
        = link_to a.owner.name, a.owner
      - else
        someone
      = content_for :action
    .details
      .avatar
        - if a.owner
          = image_tag "https://gravatar.com/avatar/a9377d333b8aec095a3646bf1799e178?d=https%3A%2F%2Fidenticons.github.com%2F462cf426418db897544f727d569f6fbe.png&r=x", width: "30", height: "30"
          / = image_tag a.owner.avatar_url, width: "30", height: "30"
        - else
          = image_tag "http://i0.wp.com/a248.e.akamai.net/assets.github.com/images/gravatars/gravatar-140.png", width: "30", height: "30"
      = yield

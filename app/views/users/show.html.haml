- provide(:title, @user.name)
.row
  %aside.col-sm-4
    %section
      %h1
        = gravatar_for @user
        = @user.name
    %section
      = render 'stats'
  .col-sm-8
    = render 'follow_form' if signed_in?
    - if @activities.any?
      %h3
        = activities_title(@user)
      - for activity in @activities
        = render_activity(activity, :layout => "layouts/activity_wrapper")


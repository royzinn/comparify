.row.row-offcanvas.row-offcanvas-right
  .col-xs-12.col-sm-9
    %p.pull-right.visible-xs
      %button.btn.btn-primary.btn-xs{"data-toggle" => "offcanvas", type: "button"} Toggle nav
    .jumbotron
      %h1= "#{@topic.first_subject.titleize} Vs #{@topic.second_subject.titleize}"
      %p.lead= @topic.question
      .ui-group-buttons
        = new_answer_link(@topic, :first)
        .or.or-lg
        = new_answer_link(@topic, :second)
      .p
        %small
          asked by
          %a{href: "#"} John
    .comment.col-8.col-sm-8.col-lg-6
      = render 'answers/answer'
    .comment.col-8.col-sm-8.col-lg-6
      = render 'answers/answer'
  #sidebar.col-xs-6.col-sm-3.sidebar-offcanvas{role: "navigation"}
    .well.sidebar-nav
      %ul.nav
        %li Sidebar
        %li.active
          %a{href: "#"} Link
        %li
          %a{href: "#"} Link
        %li
          %a{href: "#"} Link
        %li Sidebar
        %li
          %a{href: "#"} Link
        %li
          %a{href: "#"} Link
        %li
          %a{href: "#"} Link
        %li Sidebar
        %li
          %a{href: "#"} Link
        %li
          %a{href: "#"} Link
    / /.well
    = bootstrap_form_for([@topic, Answer.new], style: :vertical) do |f|
      #answer-modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", role: "dialog", tabindex: "-1"}
        .modal-dialog
          .modal-content
            .modal-header
              %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} Ã—
              %h4#myModalLabel.modal-title You claim that #{@topic.first_subject} is better
            .modal-body
              = f.alert_message "Please fix the errors below."
              = f.text_area :body, hide_label: true, rows: 4, placeholder: "explain..."
            .modal-footer
              %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Close
              = f.submit "Add Answer", class: "btn btn-primary"
